<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
	aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">ĐĂNG KÝ TÀI KHOẢN</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form method="POST" action="/dangnhap/dangky">
					<div class="form-group">
						<label for="recipient-name" class="col-form-label">HỌ VÀ TÊN:</label>
						<input minlength="6" type="text" required name="tentaikhoan" class="form-control"
							id="recipient-name">
					</div>
					<div class="form-group">
						<label for="message-text" class="col-form-label">EMAIL ĐĂNG NHẬP:</label>
						<input type="email" required name="email" class="form-control" id="recipient-name">
					</div>
					<div class="form-group">
						<label for="message-text" class="col-form-label">MẬT KHẨU:</label>
						<input id="password1" type="password" minlength="6" onchange="check_pass()" required
							name="matkhau" class="form-control" id="recipient-name">
					</div>
					<div class="form-group">
						<label for="message-text" class="col-form-label">XÁC NHẬN MẬT KHẨU:</label>
						<input type="password" id="confirm1" required name="xacnhanmatkhau"
						onchange="check_pass()"	class="form-control" id="recipient-name">
					</div>


					<div class="modal-footer">
						<!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">THOÁT</button>
						<input type="submit" id="submit" disabled class="btn btn-primary" value="ĐĂNG KÝ"> -->
						<div class="form-group col-md-12">
							<button type="submit" id="submit" disabled  value="submit" class="btn submit_btn2 form-control">ĐĂNG
								KÝ</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>