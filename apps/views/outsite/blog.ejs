<!--================Static Area =================-->

<section class="static_area">
    <div class="container">
        <div class="static_inner">
            <div class="row">
                <% if(mes !== 0) {%>
                <div class="col-lg-9">
                    <div class="static_main_content">
                        <div class="static_social">
                            <ul>
                                <li><a href="https://www.facebook.com/B%E1%BA%A3o-Ru%E1%BB%93i-Mu%E1%BB%97i-348451705812799/"><i class="fa fa-facebook"></i></a></li>
                               
                                <li><a href="mailto:tranvanbaocntt1@gmail.com"><i class="fa fa-google-plus"></i></a></li>
                               
                                
                            </ul>
                        </div>


                        <div class="static_text2">
                             
                            <h3><%= moiNhat[0][0].tieude %></h3>
                        </div>
                        <div class="media">

                            <div class="media-body">
                                <img class="img-fluid" src="../../../uploadimg/<%= moiNhat[0][0].hinhanh %> " alt="">

                            </div>
                        </div>
                        <div class="static_text2">
                            <%- moiNhat[0][0].noidung %>
                        </div>
                    </div>
                </div>

                <div class="col-lg-3">
                    <div class="right_sidebar_area">
                        <aside class="right_widget r_news_widget">
                            <div class="r_w_title">
                                <h3><%- moiNhat[0][0].tenchuyenmuc %></h3>
                            </div>
                            <div class="news_inner">
                                <% data.forEach(dulieu => { %>
                                <div class="news_item">
                                    <a href="/baiviet/<%- limit %>/<%- dulieu.id_chuyenmuc %>/<%- dulieu.id %>  ">
                                        <h4><%= dulieu.tieude %> </h4>
                                    </a>
                                    <a href="/baiviet/<%- limit %>/<%- dulieu.id_chuyenmuc %>/<%- dulieu.id %>">
                                        <h6><%=  date('{dd}-{mm}-{yyyy}', dulieu.createdAt)  %></h6>
                                    </a>
                                </div>
                                <% }) %>
                                <div class="news_item">
                                    <a href="/baiviet/<%= Number(limit) + 5 %>/<%= moiNhat[0][0].id_chuyenmuc %>">
                                        <h6>Xem Thêm</h6>
                                    </a>
                                </div>
                            </div>
                        </aside>                       
                        <aside class="right_widget r_cat_widget">
                            <div class="r_w_title">
                                <h3>Danh mục</h3>
                            </div>
                            <ul>
                                <% chuyenmuc.forEach(dulieu => { %>
                                <li><a href="/baiviet/5/<%= dulieu.id %>"><%= dulieu.tenchuyenmuc %></a>
                                </li>

                                <% } )%>
                            </ul>
                        </aside>

                    </div>
                </div>
                <% } else { %>
                <div class="col-lg-9">                  
                        <div class="col-lg-9">
                            <div class="static_main_content">
                                <div class="static_social">
                                    <ul>
                                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                        <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                                        <li><a href="#"><i class="fa fa-thumb-tack" aria-hidden="true"></i></a></li>
                                    </ul>
                                </div>
        
        
                                <div class="static_text2">
        
                                    <h3>( Không có tin nào thuộc nhóm này ! )</h3>
                                </div>
                                <div class="media">                
                                    <div class="media-body">                                                
                                    </div>
                                </div>
                                <div class="static_text2">                                           
                                </div>
                            </div>
                        </div>                  
                </div>
                <div class="col-lg-3">
                    <div class="right_sidebar_area">
                        <aside class="right_widget r_news_widget">
                            <aside class="right_widget r_cat_widget">
                                <div class="r_w_title">
                                    <h3>Danh mục</h3>
                                </div>
                                <ul>
                                    <% chuyenmuc.forEach(dulieu => { %>
                                    <li><a href="/baiviet/5/<%= dulieu.id %>"><%= dulieu.tenchuyenmuc %></a>
                                    </li>
    
                                    <% } )%>
                                </ul>
                            </aside>
                        </aside>                       
                       

                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</section>

<!--================End Static Area =================-->
