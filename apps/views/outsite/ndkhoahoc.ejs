<%- include ("header") -%>


<!--================Banner Area =================-->
<section class="banner_area1 banner_area">
    <img src="../../../../../upload/1.jpg" style="background-size: cover;position: absolute; height: 100%; width: 100%;"
        alt="Italian Trulli">
    <div class="container">
        <div class="banner_text_inner">
            <h4>TRUNG TÂM ĐÀO TẠO TIN HỌC FANCY</h4>
            <ul>
                <li><a href="index.html"><i class="fa fa-home" aria-hidden="true"></i>Home</a></li>
                <li><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>38 Nguyễn Lâm, Phường 6, Quận 10,
                        TP.HCM</a></li>

        </div>
    </div>
</section>
<!--================End Banner Area =================-->

<!--================Static Area =================-->
<section class="static_area">
    <div class="container">
        <div class="static_inner">
            <div class="row">
                <div class="col-lg-9">
                    <div class="static_main_content">
                        <div class="static_social">
                            <ul>
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                                <li><a href="#"><i class="fa fa-thumb-tack" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>


                        <div class="static_text2">
                            
                            <h3><%= moiNhat[0][0].tenkhoahoc %></h3>
                        </div>
                        <div class="media">

                            <div class="media-body">
                                <img class="img-fluid" src="../../../uploadimg/<%= moiNhat[0][0].hinhanh %> " alt="">

                            </div>
                        </div>
                        <div class="static_text2">
                            <%- moiNhat[0][0].dieukienhoc %>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="right_sidebar_area">
                        <aside class="right_widget r_news_widget">
                            <div class="r_w_title">
                                <h3>KHÓA HỌC</h3>
                            </div>
                            <div class="news_inner">
                                <% data.forEach(dulieu => { %>
                                <div class="news_item">
                                    <a href="/course/noidung/<%- dulieu.id %>">
                                        <h4><%= dulieu.tenkhoahoc %> </h4>
                                    </a>
                                    <a href="/course/noidung/<%- dulieu.id %>">
                                        <h6><%=  date('{dd}-{mm}-{yyyy}', dulieu.createdAt)  %></h6>
                                    </a>
                                </div>
                                <% }) %>
                             
                            </div>
                        </aside>
                  
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Static Area =================-->
<%- include ('footer') -%>