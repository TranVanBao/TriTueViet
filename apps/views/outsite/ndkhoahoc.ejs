<!--================Static Area =================-->
<section class="static_area">
    <div class="container">
        <div class="static_inner">
            <div class="row">
                <div class="col-lg-9">
                    <div class="static_main_content">
                        <div class="static_social">
                            <ul>
                                <li><a href="https://www.facebook.com/B%E1%BA%A3o-Ru%E1%BB%93i-Mu%E1%BB%97i-348451705812799/"><i class="fa fa-facebook"></i></a></li>
                               
                                <li><a href="mailto:tranvanbaocntt1@gmail.com"><i class="fa fa-google-plus"></i></a></li>
                               
                                
                            </ul>
                        </div>
                        <div class="static_text2">
                            <h3>KHÓA HỌC LẬP TRÌNH <%= moiNhat[0][0].tenkhoahoc %></h3>
                        </div>
                        <div class="media">
                            <% if(moiNhat[0][0].hinhanh == null || moiNhat[0][0].hinhanh == ''){ %> 
                                <div class="media-body">
                                    <img class="img-fluid" src="../../../images/khoahoc/macdinh.jpg" alt="">
                                </div>
                            <% } else{ %> 
                            <div class="media-body">
                                <img class="img-fluid" src="../../../uploadimg/<%= moiNhat[0][0].hinhanh %> " alt="">
                            </div>
                        <% } %> 
                        </div>
                        <div class="static_text2">
                            <h4>Điều Kiện Học</h4>
                            <%- moiNhat[0][0].dieukienhoc %>
                        </div>
                        <div class="static_text2">
                            <%- moiNhat[0][0].lotrinhhoc %>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="right_sidebar_area">
                        <aside class="right_widget r_news_widget">
                            <div class="r_w_title">
                                <h3>KHÓA HỌC</h3>
                            </div>
                            <div class="news_inner">
                                <% data.forEach(dulieu => { %>
                                <div class="news_item">
                                    <a href="/course/noidung/<%- dulieu.tenkhoahoc %>">
                                        <h4><%= dulieu.tenkhoahoc %> </h4>
                                    </a>
                                    <a href="/course/noidung/<%- dulieu.id %>">
                                        <h6><%=  date('{dd}-{mm}-{yyyy}', dulieu.createdAt)  %></h6>
                                    </a>
                                </div>
                                <% }) %>

                            </div>
                        </aside>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Static Area =================-->
<%- include ('footer') -%>