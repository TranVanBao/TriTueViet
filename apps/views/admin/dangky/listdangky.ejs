<%- include ('../header') -%>
<div class="container-fluid">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">ĐĂNG KÝ</li>
    </ol>


    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <!-- <i class="fas fa-table"></i>
            Data Table Example -->
            <div><button data-toggle="modal" data-target="#exampleModal" style="color: #fff;float: right;
              height: 30px;
              font-weight: bold;
              font-size: 12px;
              text-shadow: none;
              min-width: 100px;
              border-radius: 50px;
              line-height: 13px;
              background-color: #269abc;
              border-color: #1b6d85 ; float:right;"><i class="fas fa-plus"></i> Add </button>
            </div>

        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên học viên</th>
                            <th>Ngày đăng ký</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Lớp học đăng ký</th>
                            <th>Thanh toán</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var stt = 0 %>
                         <% console.log(lophoc[0].tenlophoc );
                         %>
                        <% data.forEach(dulieu => { %>
                        <% stt++ %>
                        <tr>
                            <td><%= stt %></td>
                            <td><%= dulieu.tenkhachhang %></td>
                            <td><%=  date('{mm}/{dd}/{yyyy}', dulieu.createAt)  %></td>
                            <td><%=  String(dulieu.sdt).replace(/(.)(?=(\d{3})+$)/g,'$1 ')  %></td>
                            <td><%= dulieu.email %></td>
                            <td><%= dulieu.diachi %></td>
                            <td><%= lophoc[0].tenlophoc %></td>
                            <td><%= String(dulieu.thanhtoan).replace(/(.)(?=(\d{3})+$)/g,'$1,') %></td>
                            <td>
                                <a href="#" style="color: gold;margin-left: 20%;" class="edit" title="Edit"
                                    data-toggle="modal" data-target="#updatedangky<%= dulieu.id %>">
                                    <i class="fas fa-pen">&nbsp;</i></a>

                                <a href="#" style="color: red;margin-left: 15%;" class="delete" title="Delete"
                                    data-toggle="modal" data-target="#delete<%= dulieu.id %>"><i
                                        class="fas fa-trash">&nbsp;</i></a>

                                <div class="modal  fade" id="delete<%= dulieu.id %>" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Bạn muốn xóa !!!</h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Close</button>
                                                <a class="btn btn-primary"
                                                    href="/admin/dangky/xoadangky/<%= dulieu.id %>">Yes</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="modal fade" id="updatedangky<%= dulieu.id %>" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">SỬA HỌC VIÊN</h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <form method="POST" action="/admin/dangky/<%= dulieu.id %>">

                                                    <div class="form-group">
                                                        <label for="recipient-name" class="col-form-label">TÊN HỌC
                                                            VIÊN:</label>
                                                        <input value="<%= dulieu.tenkhachhang %>" type="text"
                                                            name="tenkhachhang" class="form-control"
                                                            id="recipient-name">
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="message-text" class="col-form-label">SỐ ĐIỆN
                                                            THOẠI:</label>
                                                        <input value="<%= dulieu.sdt %>" type="text" pattern="[0-9]{9,11}" name="sdt"
                                                            class="form-control" id="recipient-name">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="message-text" class="col-form-label">EMAIL:</label>
                                                        <input value="<%= dulieu.email %>" type="email" name="email"
                                                            class="form-control" id="recipient-name">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="message-text" class="col-form-label">ĐIẠ
                                                            CHỈ:</label>
                                                        <input value="<%= dulieu.diachi %>" type="text" name="diachi"
                                                            class="form-control" id="recipient-name">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="message-text" class="col-form-label">THANH
                                                            TOÁN:</label>
                                                        <input pattern="[0-9]{6,11}" value="<%= dulieu.thanhtoan %>"
                                                            type="text" name="thanhtoan" class="form-control"
                                                            id="recipient-name">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="message-text" class="col-form-label">TRẠNG
                                                            THÁI:</label>
                                                        <select name="trangthai" class="form-control">
                                                            <option value="1">ĐANG HỌC</option>
                                                            <option value="0">KHÔNG</option>
                                                        </select>
                                                    </div>

                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">THOÁT</button>

                                                        <input type="submit" class="btn btn-primary"
                                                            value="Sửa Học Viên">
                                                    </div>
                                                </form>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </td>

                        </tr>


                        <%}); %>


                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>

    <p class="small text-center text-muted my-5">
        <em>More table examples coming soon...</em>
    </p>
    <%- include ('adddangky') -%>
    <%- include ('../footer') -%>
</div>