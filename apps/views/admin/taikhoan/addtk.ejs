<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
	aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">THÊM TÀI KHOẢN</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form method="POST" action="/admin/taikhoan">
					<div class="form-group">
						<label for="recipient-name" class="col-form-label">TÊN TÀI KHOẢN:</label>
						<input  minlength="3" type="text" required name="tentaikhoan" class="form-control" id="recipient-name">
					</div>
					<div class="form-group">
						<label for="message-text" class="col-form-label">Email:</label>
						<input type="email" required name="email" class="form-control" id="recipient-name">
					</div>
					<div class="form-group">
						<label for="message-text" class="col-form-label">MẬT KHẨU:</label>
						<input id="password" type="password" minlength="6" onchange='check_pass();' required name="matkhau" class="form-control" id="recipient-name">
					</div>
					<div class="form-group">
						<label for="message-text" class="col-form-label">XÁC NHẬN MẬT KHẨU:</label>
						<input type="password" id="confirm" required name="xacnhanmatkhau" onchange='check_pass();' class="form-control" id="recipient-name">
					</div>
					<div class="form-group">
                        <label for="message-text" class="col-form-label">QUYỀN HẠNG :</label>
                        <select name="quyenhang" class="form-control">
                            <% phanquyen.forEach(dl => { %>
                            <option value="<%= dl.quyenhang %>"> <%= dl.quyenhang %></option>
                            <%}); %>
                        </select>
					</div>
					<div class="form-group">
						<label for="message-text" class="col-form-label">TRẠNG THÁI:</label>
						<select   name="trangthai" class="form-control" >
                           
							<option value="1">SỬ DỤNG</option>
							<option value="0">KHÔNG SỬ DỤNG</option>							
						  </select>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">THOÁT</button>
						
						<input type="submit" id="submit" disabled  class="btn btn-primary" value="TẠO TÀI KHOẢN">
					</div>			
				</form>
			</div>
			
		</div>
	</div>
</div>