<%- include ('../header') -%>

<div class="container-fluid">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/admin/index">Trang chủ</a>
        </li>
        <li class="breadcrumb-item active">PHÂN QUYỀN</li>
    </ol>


    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <!-- <i class="fas fa-table"></i>
            Data Table Example -->
            <!-- <div>
               <a data-toggle="modal" data-target="#exampleModal" style="    color: #fff;
               float: right;
               height: 30px;
               font-weight: bold;
               font-size: 12px;
               text-shadow: none;
               min-width: 110px;
               border-radius: 0;
               line-height: 29px;
               background-color: #269abc;
               border-color: #c1c1c1;
               float: right;
               padding-left: 3%;"><i class="fas fa-plus"></i> Add </a>
            </div> -->

        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="canhgiua">STT</th>
                            <th class="canhgiua">Tên quyền</th>
                            <th class="canhgiua">Trạng thái </th>
                            <th class="canhgiua">Tác vụ</th>

                        </tr>
                    </thead>
                    <tbody>
                        <% var stt = 0 %>
                        <% data.forEach(dulieu => { %>
                        <% stt++ %>
                        <tr>
                            <td class="canhgiua"><%= stt %></td>
                            <td class="canhgiua"><%= dulieu.quyenhang %></td>
                            <td class="canhgiua"> <% if(dulieu.trangthai == 1) { %>
                                Được kích hoạt
                                <% } else {%>
                                Đã đóng
                                <% } %>
                            </td>

                            <td class="canhgiua" style="text-align: center;">
                                <a href="#" style="color: greenyellow;" class="edit" title="Edit" data-toggle="modal"
                                    data-target="#updatephong<%= dulieu.id %>">
                                    <i class="fas fa-edit"></i>&nbsp;</i></a>

                                <div class="modal fade" id="updatephong<%= dulieu.id %>" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">SỬA QUYỀN HẠNG</h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <form onsubmit="return vlupphanquyen()" name="vluppq" method="POST" action="/admin/phanquyen/<%= dulieu.id %>">
                                                    <div class="form-group col-lg-12" style="color: red;" id="erroruppq"></div>
                                                    <div class="form-group">
                                                        <label for="recipient-name" class="col-form-label">TÊN
                                                            QUYỀN HẠNG</label>
                                                        <input required value="<%= dulieu.quyenhang %>" type="text"
                                                            name="quyenhang" class="form-control" id="recipient-name">
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="message-text" class="col-form-label">TRẠNG
                                                            THÁI</label>
                                                        <select value="<%= dulieu.trangthai %>" name="trangthai"
                                                            class="form-control">
                                                            <% if(dulieu.trangthai == 1 ) {%>
                                                            <option value="1">ĐƯỢC KÍCH HOẠT</option>
                                                            <option value="0">KHÔNG SỬ DỤNG</option>
                                                            <% } else {%>
                                                            <option value="0">KHÔNG SỬ DỤNG</option>
                                                            <option value="1">ĐƯỢC KÍCH HOẠT</option>
                                                            <% } %>
                                                        </select>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-dismiss="modal">THOÁT</button>

                                                        <input type="submit" class="btn btn-primary"
                                                            value="SỬA PHÂN QUYỀN">
                                                    </div>
                                                </form>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </td>

                        </tr>


                        <%}); %>               
                    </tbody>
                </table>
            </div>
        </div>
       
    </div>
</div>


<%- include ('addphanquyen') -%>
