
<%- include ('../header') -%>
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-9" style="box-shadow: 0 0 5px #dedede;
                left: 15%;">
                <div class="page-content ask-question">
                    <div class="contact_form boxedtitle page-title">
                        <div class="main_title">
                            <h2 style="color: #1B1464;">Thêm Khóa Học</h2>
                            <div class="form-style form-style-3" id="question-submit">
								<form onsubmit="return addkhoahoc1();" name="addkh1" method="POST" action="/admin/khoahoc" enctype="multipart/form-data">				
									<div class="form-group col-lg-12" style="color: red;" id="errorkha"></div>
									<div class="form-group">					
										<label for="recipient-name" class="col-form-label">TÊN KHÓA HOC</label>
										<input type="text" required name="tenkhoahoc" class="form-control" id="recipient-name">
									</div>
									<div class="form-group">
										<label for="message-text" class="col-form-label">LOẠI KHÓA HỌC</label>
										<input placeholder="VD : Có phí" type="text" required name="loaikhoahoc" class="form-control" id="recipient-name">
									</div>				
									<div class="form-group">
										<label for="message-text" class="col-form-label">TRẠNG THÁI</label>
										<select name="trangthai" class="form-control" >							
											<option value="1">HIỆN</option>		
											<option value="0">ẨN</option>					
										  </select>
									</div>								  
									<div class="file-field" style="width: 60%;
									margin-left: 20%;">
										<div class="z-depth-1-half mb-4">
											<img class="img-thumbnail" style="width: 100%;height: 300px;" id="blah"
												src="https://mdbootstrap.com/img/Photos/Others/placeholder.jpg" alt="" />
											<div class="d-flex justify-content-center">
												<div class="btn btn-mdb-color btn-rounded float-left">
													<span>Choose file</span>
													<input name="hinhanh" type='file' id="imgInp" />
												</div>
											</div>
										</div>
				
									</div>
									<div class="form-group col-lg-12">
										<label for="message-text" class="col-form-label">ĐIỀU KIỆN HỌC</label>
										<textarea required name="dieukienhoc" id="ckeditorkh"></textarea>
										<p id="demo2" style="color: crimson;"></p>
										<p id="demo2" style="color: crimson;"></p>
									</div>
									<div class="form-group col-lg-12">
										<label for="message-text" class="col-form-label">LỘ TRÌNH HỌC</label>
                                        <textarea required name="lotrinhhoc" id="ckeditoraddkh"></textarea>
                                        <p id="demo2" style="color: crimson;"></p>

                                    </div>
									<div class="modal-footer">
										<button type="button" class="btn btn-secondary" data-dismiss="modal">THOÁT</button>
										
										<input type="submit" class="btn btn-primary" value="TẠO KHÓA HỌC">
									</div>			
								</form>
                            </div>
                        </div><!-- End page-content -->
                    </div>
                </div><!-- End main -->
            </div>
        </div>
</section>
<script>
    function addkhoahoc1() {
        let tenkhachhang = document.forms["addkh1"]["tenkhoahoc"].value;
        if (tenkhachhang === '' || tenkhachhang == null || tenkhachhang.length < 2) {
            document.getElementById("errorkha").innerHTML = " Xin điền tên hợp lệ !!!";
            return false;
        }
        let sdt = document.forms["addkh1"]["loaikhoahoc"].value;
        if (sdt === '' || sdt == null || sdt.length < 2 ) {
            document.getElementById("errorkha").innerHTML = " Loại khóa học xin điền hợp lệ !!!";
            return false;
        }
        let dieukienhoc = document.forms["addkh1"]["dieukienhoc"].value;
        if (dieukienhoc === '' || dieukienhoc == null || dieukienhoc.length < 2 ) {
            document.getElementById("errorkha").innerHTML = " Xin điền điều kiện hợp lệ !!!";
            return false;
        }  
        let hinhanh = document.forms["addkh1"]["hinhanh"].value;
        if (hinhanh === '' || hinhanh == null) {
            document.getElementById("errorkha").innerHTML = " Xin chọn hình ảnh hiển thị !!!";
            return false;
        }
        

    }
</script>
