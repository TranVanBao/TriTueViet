<%- include ('../header') -%>

<div class="container-fluid">

  <!-- Breadcrumbs-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">KHÓA HỌC</li>
  </ol>


  <!-- DataTables Example -->
  <div class="card mb-3">
    <div class="card-header">
      <!-- <i class="fas fa-table"></i>
            Data Table Example -->
      <div><button data-toggle="modal" data-target="#exampleModal" style="color: #fff;float: right;
              height: 30px;
              font-weight: bold;
              font-size: 12px;
              text-shadow: none;
              min-width: 100px;
              border-radius: 50px;
              line-height: 13px;
              background-color: #269abc;
              border-color: #1b6d85 ; float:right;"><i class="fas fa-plus"></i> Add </button>
      </div>

    </div>

    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th class="canhgiua">STT</th>
              <th class="canhgiua">Tên khóa học</th>
              <th class="canhgiua">Loại khóa học</th>
              <!-- <th>Thời gian</th> -->
              <th class="canhgiua">Trạng thái</th>
              <th class="canhgiua">Hình ảnh</th>
              <th class="canhgiua">Tác vụ</th>

            </tr>
          </thead>
          <tbody>
            <% var stt = 0 %>
            <% data.forEach(dulieu => { %>
            <% stt++ %>
            <tr>
              <td class="canhgiua"><%= stt %></td>
              <td class="canhgiua"><%= dulieu.tenkhoahoc  %></td>
              <td class="canhgiua"><%= dulieu.loaikhoahoc %></td>
              <% if(dulieu.trangthai == 1) { %>
              <td class="canhgiua"> Được mở </td>
              <% }  %>
              <%  if(dulieu.trangthai == 0) { %>
              <td class="canhgiua">  Đang đóng </td>
              <% } %>

              <td class="canhgiua"><img style="width: 140px; height: 140px" src="../../../../uploadimg/<%= dulieu.hinhanh %>" alt="">
              </td>
              <td class="canhgiua" style="text-align: center;">
                <a href="#" style="color:greenyellow;" class="edit" title="Edit" data-toggle="modal"
                  data-target="#updatekh<%= dulieu.id %>">
                  <i class="fas fa-edit"></i>&nbsp;</i></a>         


                <div class="modal fade" id="updatekh<%= dulieu.id %>" tabindex="-1" role="dialog"
                  aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">SỬA KHÓA HỌC</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <form method="POST" action="/admin/khoahoc/<%= dulieu.id %>" enctype="multipart/form-data">
                          <div class="form-group">
                            <label for="recipient-name" class="col-form-label">TÊN KHÓA HOC:</label>
                            <input value="<%= dulieu.tenkhoahoc %>" type="text" name="tenkhoahoc" class="form-control"
                              id="recipient-name">
                          </div>
                          <div class="form-group">
                            <label for="message-text" class="col-form-label">LOẠI KHÓA HỌC:</label>
                            <input value="<%= dulieu.loaikhoahoc %>" type="text" name="loaikhoahoc" class="form-control"
                              id="recipient-name">
                          </div>

                          <div class="form-group">
                            <label for="message-text" class="col-form-label">TRẠNG THÁI:</label>
                            <select name="trangthai" class="form-control">
                              <% if(dulieu.trangthai == 0) { %>
                              <option value="0">ẨN</option>
                              <option value="1">HIỆN</option>
                              <% }  %>
                              <%  if(dulieu.trangthai == 1) { %>
                              <option value="1">HIỆN</option>
                              <option value="0">ẨN</option>
                              <% } %>

                            </select>
                          </div>
                          <div class="file-field">
                            <div class="z-depth-1-half mb-4">
                              <img src="../../../../uploadimg/<%=  dulieu.hinhanh %>" id="profile-img-tag" width="100%"
                                height="200px" />
                            </div>
                            <div class="d-flex justify-content-center">
                              <div class="btn btn-mdb-color btn-rounded float-left">
                                <span>Chọn hình ảnh</span>
                                <input value="" type="file" name="hinhanh" id="profile-img">
                                <input value="<%= dulieu.hinhanh %>" type="text" hidden name="hinhanh" id="profile-img">
                              </div>
                            </div>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">THOÁT</button>

                            <input type="submit" class="btn btn-primary" value="SỬA KHÓA HỌC">
                          </div>
                        </form>
                      </div>

                    </div>
                  </div>
                </div>
              </td>

            </tr>


            <%}); %>


          </tbody>
        </table>
      </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
  </div>

  <p class="small text-center text-muted my-5">
    <em>More table examples coming soon...</em>
  </p>

</div>


<%- include ('addkh') -%>
<%- include ('../footer') -%>